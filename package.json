{
  "name": "eto-mcp",
  "version": "1.0.0",
  "description": "Remote MCP server for tour search via Tourvisor",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "tsx watch src/index.ts",
    "bot": "tsx src/bot.ts",
    "llm:smoke": "tsx scripts/llm_smoke.ts",
    "test": "tsx tests/run.ts",
    "test:update": "tsx tests/run.ts --update",
    "test:fixtures": "tsx scripts/run_fixtures.ts"
  },
  "keywords": [
    "mcp",
    "fastify",
    "typescript",
    "tourvisor"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=20"
  },
  "dependencies": {
    "@fastify/rate-limit": "^10.3.0",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "dotenv": "^17.3.1",
    "fastify": "^5.0.0",
    "pino": "^9.0.0",
    "sharp": "^0.34.5",
    "telegraf": "^4.16.3",
    "undici": "^7.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^22.10.0",
    "ngrok": "^5.0.0-beta.2",
    "tsx": "^4.21.0",
    "typescript": "^5.7.2"
  }
}
